<form action="/search" method="get" style="padding-top:40px;">
  <div class="form-group">
    <label for="location">活動場所</label>
    <select name="location" class="form-control" id="location">
    <option value=1>豊中キャンパス</option>
    <option value=2>吹田キャンパス</option>
    <option value=3>箕面キャンパス</option>
    <option value=0>その他</option>
    </select>
  </div>
  <div class="form-group">
    <label for="day">曜日</label>
    <select multiple name="days[]" class="form-control" id="day">
      <option value=0>月</option>
      <option value=1>火</option>
      <option value=2>水</option>
      <option value=3>木</option>
      <option value=4>金</option>
      <option value=5>土</option>
      <option value=6>日</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary"><i class="fa fa-search mr-2"></i>サークルを検索</button>
</form>